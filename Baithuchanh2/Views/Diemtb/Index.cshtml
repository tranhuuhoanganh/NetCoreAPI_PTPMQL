<h2>Tính điểm môn học</h2>
<form method="post">
    <label>Điểm A (20%):</label>
    <input type="number" step="0.1" name="A" required />
    <br />
    <label>Điểm B (30%):</label>
    <input type="number" step="0.1" name="B" required />
    <br />
    <label>Điểm C (50%):</label>
    <input type="number" step="0.1" name="C" required />
    <br />
    <button type="submit">Tính điểm</button>
</form>
@if (ViewBag.FinalGrade != null)
{
    <p>Điểm tổng kết: <strong>@ViewBag.FinalGrade</strong></p>
}
